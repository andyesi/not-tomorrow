<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Pomodoros Expected:"/>

    <RatingBar android:id="@+id/expected_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="false"
        android:numStars="6"
        android:rating="0"
        android:stepSize="1.0" />
    <RatingBar android:id="@+id/expected_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="false"
        android:numStars="6"
        android:rating="0"
        android:stepSize="1.0" />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Pomodoros Spent:"/>

    <RatingBar android:id="@+id/spent_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="6"
        android:rating="0"
        android:stepSize="1.0" />
    <RatingBar android:id="@+id/spent_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="6"
        android:rating="0"
        android:stepSize="1.0" />
    <Button android:id="@+id/start_pomodoro"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Start a Pomodoro"/>
    
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Interrupts:"/>

    <RatingBar android:id="@+id/interrupts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="6"
        android:rating="0"
        android:stepSize="1.0" />
</LinearLayout>