<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:layout_marginTop="5dip"
    android:orientation="vertical" >
    <TextView android:id="@+id/status_panel" 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:textSize="18sp"
        style="@style/task_text"
        android:text="Unfinished"/>
    
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        style="@style/task_text"
        android:text="Pomodoros Expected:"/>

    <RatingBar android:id="@+id/expected_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:isIndicator="false"
        android:numStars="6"
        android:rating="0"
        android:stepSize="1.0" />
    <RatingBar android:id="@+id/expected_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:isIndicator="false"
        android:numStars="6"
        android:rating="0"
        android:stepSize="1.0" />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        style="@style/task_text"
        android:text="Pomodoros Spent:"/>

    <RatingBar android:id="@+id/spent_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:isIndicator="true"
        android:numStars="6"
        android:rating="0"
        android:stepSize="1.0" />
    <RatingBar android:id="@+id/spent_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:isIndicator="true"
        android:numStars="6"
        android:rating="0"
        android:stepSize="1.0" />
    <Button android:id="@+id/start_pomodoro"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Start a Pomodoro"/>
    
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        style="@style/task_text"
        android:text="Interrupts:"/>

    <RatingBar android:id="@+id/interrupts_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:isIndicator="true"
        android:numStars="6"
        android:rating="0"
        android:stepSize="1.0" />
    <RatingBar android:id="@+id/interrupts_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:isIndicator="true"
        android:numStars="6"
        android:rating="0"
        android:stepSize="1.0"
        android:visibility="gone" />
    <RatingBar android:id="@+id/interrupts_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:isIndicator="true"
        android:numStars="6"
        android:rating="0"
        android:stepSize="1.0"
        android:visibility="gone" />
</LinearLayout>