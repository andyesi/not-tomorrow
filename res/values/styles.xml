<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="task_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical|clip_horizontal</item>
    </style>
    <style name="header_text" parent="task_text">
        <item name="android:textColor">@color/header</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="task_item_text" parent="task_text">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="done_task_item_text" parent="task_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/task_done</item>
        <item name="android:singleLine">false</item>
        <item name="android:lines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    <style name="history_header_text" parent="task_text">
        <item name="android:textColor">@color/header</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="pomodoro_ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/pomodoro_ratingbar</item>
        <item name="android:minHeight">@dimen/ratingstar_min_height</item>
        <item name="android:maxHeight">@dimen/ratingstar_max_height</item>
    </style>
    <style name="pomodoro_button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>